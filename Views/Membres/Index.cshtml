@model IEnumerable<GPLCC_2.Models.Membre>

@{
    ViewData["Title"] = "Index";
}




<div class="row">
    <div class="col-sm-8">
        <h3>Liste des membres</h3>
    </div>
    <div class="col-sm-4">
        <a asp-action="Create" class="livre btn btn-secondary"><img src="~/images/membre.png" class="i">Nouveau Membre</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                <a asp-action="Edit" class="fa fa-pencil-alt" title="Modifier" asp-route-id="@item.Numero"></a> 
                <a asp-action="Details" class="fa fa-th-list" title="Informations" asp-route-id="@item.Numero"></a> 
                <a asp-action="Delete" class="fa fa-trash-alt" title="Supprimer" asp-route-id="@item.Numero"></a>
            </td>
        </tr>
}
    </tbody>
</table>
