@model GPLCC_2.Models.Pret

@{
    ViewData["Title"] = "Create";
}

<h1>Ajouter un nouveau</h1>

<h4>Pret</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumLivre" class="control-label">Livre</label>
                <select asp-for="NumLivre" class="form-control" asp-items="ViewBag.NumLivre"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumMembre" class="control-label">Membre</label>
                <select asp-for="NumMembre" class ="form-control" asp-items="ViewBag.NumMembre"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
                <input type="hidden" asp-for="DateFin" class="form-control" value="10/10/2010"/>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
